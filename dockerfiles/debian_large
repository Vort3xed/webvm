FROM --platform=i386 i386/debian:buster
ARG DEBIAN_FRONTEND=noninteractive

# Install dependencies
RUN apt-get update && apt-get -y upgrade && \
    apt-get install -y apt-utils bsdmainutils ca-certificates clang \
    cowsay cpio cron dmidecode dmsetup g++ gcc \
    hexedit ifupdown init lsb-base lshw lua50 luajit make \
    nano netbase nodejs openssl procps python3 python3-cryptography \
    python3-jinja2 python3-numpy python3-pandas python3-pip python3-scipy \
    python3-six python3-yaml readline-common rsyslog ruby sensible-utils \
    ssh systemd systemd-sysv udev vim  \
    xxd iptables isc-dhcp-client isc-dhcp-common less netcat-openbsd && \
    apt-get clean && rm -rf /var/lib/apt/lists/*


# Make a user, then copy over the /example directory
RUN useradd -m user && echo "user:password" | chpasswd
COPY --chown=user:user ./examples /home/user/examples
RUN chmod -R +x  /home/user/examples/lua
RUN echo 'root:password' | chpasswd
CMD [ "/bin/bash" ]
